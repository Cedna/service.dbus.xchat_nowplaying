<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.dbus.xchat_nowplaying"
       name="XChat nowplaying service"
       version="0.8.0"
       provider-name="Cedna">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.service"
             library="default.py" start="login|startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">XChat nowplaying service</summary>
    <description lang="en">Connect to the D-Bus XChat Remote Interface and publishes current playing media data information.</description>
    <platform>linux</platform>
    <email>sptcedna@gmail.com</email>
  </extension>
</addon>
